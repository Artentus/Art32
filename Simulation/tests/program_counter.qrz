top mod Top {
    let data_in: InPort<32>;
    let inc: InPort<32>;
    let load: InPort<1>;

    let pc_next: OutPort<32>;
    let pc_value: OutPort<32>;

    let enable: InPort<1>;
    let reset: InPort<1>;
    let clk: InPort<1>;

    let pc: ProgramCounter<32>;

    comb {
        pc.data_in = data_in.d_in;
        pc.inc = inc.d_in;
        pc.load = load.d_in;

        pc_next.d_out = pc.pc_next;
        pc_value.d_out = pc.pc_value;

        pc.enable = enable.d_in;
        pc.reset = reset.d_in;
        pc.clk = clk.d_in;
    }
}
