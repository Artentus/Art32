top mod Top {
    let lhs: InPort<32>;
    let rhs: InPort<32>;
    let result: OutPort<32>;

    let op: InPort<5>;
    let start: InPort<1>;
    let ready: OutPort<1>;

    let enable: InPort<1>;
    let reset: InPort<1>;
    let clk: InPort<1>;

    let fpu: Fpu;
    comb {
        fpu.lhs = lhs.d_in;
        fpu.rhs = rhs.d_in;
        result.d_out = fpu.result;

        fpu.op = match op.d_in {
            0x00 => FpuOp::Add,
            0x01 => FpuOp::Sub,
            0x02 => FpuOp::Mul,
            0x03 => FpuOp::Div,
            //0x04 => FpuOp::Rem,
            0x06 => FpuOp::Min,
            0x07 => FpuOp::Max,
            0x08 => FpuOp::Floor,
            0x09 => FpuOp::Ceil,
            0x0A => FpuOp::Round,
            0x0B => FpuOp::Trunc,
            0x0C => FpuOp::Abs,
            0x0D => FpuOp::Neg,
            0x0E => FpuOp::Sqrt,
            0x0F => FpuOp::Rsqrt,
            0x10 => FpuOp::CmpEq,
            0x11 => FpuOp::CmpNe,
            0x12 => FpuOp::CmpLt,
            0x13 => FpuOp::CmpGe,
            0x18 => FpuOp::FtoI,
            0x19 => FpuOp::ItoF,
            _ => FpuOp::Add,
        };
        fpu.start = start.d_in;
        ready.d_out = fpu.ready;

        fpu.enable = enable.d_in;
        fpu.reset = reset.d_in;
        fpu.clk = clk.d_in;
    }
}
